<%= render partial: "shared/nav" %>

<section id="discount_create">
<%= form_with url: merchant_bulk_discounts_path, method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/><br/>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold %><br/><br/>
  <%= f.label :percentage %>
  <%= f.text_field :percentage %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>
</section>